matrix1 <- matrix(1:6, nrow = 2, ncol = 3)
matrix2 <- matrix(7:12, nrow = 2, ncol = 3)
print("Matrix 1:")
print(matrix1)
print("Matrix 2:")
print(matrix2)
combined_columns <- cbind(matrix1, matrix2)
print("Combined by columns:")
print(combined_columns)
combined_rows <- rbind(matrix1, matrix2)
print("Combined by rows:")
print(combined_rows)
